extends ../layout

block content
  .page-header
    h2
      i.fa.fa-upload
      | File Upload

  .btn-group.btn-group-justified#event-emiter
    a.btn.btn-success
      i.fa.fa-book
      | Emit 'testing' event
    a.btn.btn-success
      i.fa.fa-laptop
      | Customize File Upload

  h3 File Upload Form
  .row
    .col-sm-6
      p All files will be uploaded to "/uploads" directory.
      form#csvForm(role='form', enctype='multipart/form-data', method='POST')
        .form-group
          label.control-label File Input
          input#myFileInput(type='file', name='myFile')
          button.btn.btn-primary(type='submit') Submit
      #app {{message}}
        ul
          li(v-for="input in fileInputs") {{input.id}}